
@{
    Layout = null;
}

@model WebApplication1.Models.LoginModel

@using (Html.BeginForm("Login", "Home",  new { FormMethod="POST", id = "formPostId" }))
{
   @Html.AntiForgeryToken()
    @Html.ValidationSummary();
    <div class="container">
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">@Html.LabelFor(m => m.UserId)</div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.UserId)
                @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">@Html.LabelFor(m => m.Passowrd)</div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Passowrd,new { @class = "form-control", type = "Password" })
          
                @Html.ValidationMessageFor(m => m.Passowrd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2"></div>
            <div class="col-md-1"><input type="submit" value="Login" /></div>
            <div class="col-md-7"><input type="button" id="btnClear" value="Clear" /></div>
            @Html.ActionLink("Register User", "Register", "Home")
        </div>

    </div>
}
